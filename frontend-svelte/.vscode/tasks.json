{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "start-svelte-dev-server",
        "type": "shell",
        "command": "npm run dev",
        "isBackground": true,
        "problemMatcher": {
          "owner": "svelte",
          "pattern": {
            "regexp": "^.*$",
            "file": 1,
            "location": 2,
            "message": 3
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*server is running.*",
            "endsPattern": ".*ready in.*"
          }
        }
      }
    ]
  }